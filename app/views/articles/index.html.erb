<p id="notice"><%= notice %></p>

<h3>記事一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>公開ステータス</th>
      <th>記事カテゴリー</th>
      <th>リンク</th>
      <th>表示日時</th>
      <th>作成日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td ><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.status %></td>
        <td><%= article.category %></td>
        <td><%= article.link %></td>
        <td><%= article.display_at %></td>
        <td><%= article.created_at %></td>
        <td><div type="button" class="btn btn-default"><%= link_to '詳細', article %></div></td>
        <td ><div type="button" class="btn btn-warning"><%= link_to '編集', edit_article_path(article) %></div></td>
        <td><div  type="button" class="btn btn-danger"><%= link_to '削除', article, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div  type="button" class="btn btn-link"><%= link_to '新規投稿', new_article_path %></div>
